{
  "compilerOptions": {
    "target": "es2018",
    "rootDir": "./src",
    "outDir": "./dist",
    "module": "commonjs",
    "lib": [
      "dom",
      "esnext"
    ],
    "esModuleInterop": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "sourceMap": true,
    "declaration": false,
    "noImplicitAny": false,
    "allowSyntheticDefaultImports": false,
    "pretty": true,
    "removeComments": true
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "**/__tests__",
    "**/__mocks__"
  ]
}